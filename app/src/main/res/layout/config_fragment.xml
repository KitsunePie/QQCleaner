<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gcssloop.widget.RCLinearLayout
        android:id="@+id/config_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#ffffff"
        app:clip_background="true"
        app:round_corner="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/config_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.gcssloop.widget.RCLinearLayout>
    <!-- 居中问题，目前暂时无法在屏幕中央，因为当前布局是内容布局，只能在内容布局中居中 -->
    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_list_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="点击按钮添加配置"
            android:textSize="16sp" />
    </LinearLayout>

    <com.lihang.ShadowLayout
        android:id="@+id/add_config_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        app:hl_cornerRadius="18dp"
        app:hl_layoutBackground="#0095FF"
        app:hl_layoutBackground_true="#ffffff"
        app:hl_shadowColor="#600095FF"
        app:hl_shadowLimit="6dp"
        app:hl_shadowOffsetY="3dp"
        app:hl_shapeMode="ripple">

        <TextView
            android:layout_width="98dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/add_config"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

    </com.lihang.ShadowLayout>
</RelativeLayout>